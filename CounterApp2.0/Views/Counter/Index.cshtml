@{
    ViewData["Title"] = "Посещения";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0" style="width: 400px;">
        <div class="card-body text-center">
            <h3 class="text-uppercase text-muted fw-semibold">Брояч на посещенията</h3>
            <h1 class="display-3 fw-bold text-primary my-4">@ViewBag.VisitCount</h1>
            <p class="text-muted">Вашите посещения се запазват в сесията.</p>
            <a href="/" class="btn btn-primary mt-3 px-4">Обнови страницата</a>
        </div>
    </div>
</div>
